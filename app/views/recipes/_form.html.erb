<%= form_for @recipe do | f | %>
  <%= render "shared/errors", object: @recipe %>

  <div class="recipe details">
    <p>
      <%= f.label :name %><br>
      <%= f.text_field :name %><br>
    </p>

    <p>
      <%= f.label :description %><br>
      <%= f.text_area :description %><br>
    </p>

    <p>
      <%= f.label :author %>
      <%= f.text_field :author %>
    </p>

  </div>

  <div>
    <p><strong>Ingredients:</strong></p>
      <div id="ingredients">
        <%= f.fields_for :ingredients do | ingredient | %>
          <% render "ingredients_fields", f: ingredient %>
        <% end %>
      </div>
      <div class="links">
        <%= link_to_add_association "add ingredient", f, :ingredients %>
      </div>
  </div>
  
  <div>
    <p><strong>Instructions:</strong></p>
      <div id="instructions">
        <%= f.fields_for :instructions do | instruction | %>
          <% render "instructions_fields", f: instruction %>
        <% end %>
      </div>

      <div class="links">
        <%= link_to_add_association "add instruction", f, :instructions %>
      </div>
  </div>

  <div>
    <%= f.text_field :all_tags, placeholder: "Tags, separate with comma" %>
  </div>

  <p>
    <%= f.submit %>
  </p>
<% end %>