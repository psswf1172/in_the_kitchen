<div class="card border-danger">
  <div class="card-body">
    <%= form_for @recipe do | f | %>

      <%= render "shared/errors", object: @recipe %>

      <%= f.text_field :title, class: "form-control", placeholder: "Recipe Name" %><br />

      <%= f.text_area :description, class: "form-control", placeholder: "Description", id: "wysiwyg" %><br />

      <%= f.text_field :author, class: "form-control", placeholder: "Recipe Author" %><br />

    <h6><strong>Ingredients:</strong></h6>
      <div id="ingredients">
        <%= f.fields_for :ingredients, @recipe.ingredients.build do | ingredient | %>
          <% render "ingredient_fields", f: ingredient %>
        <% end %>
      </div>
      <div tabindex="0" style="text-align: right;">
        <%= link_to_add_association "Add ingredient", f, :ingredients, class: "btn btn-secondary" %>
      </div>
      <br /><br />

    <h6><strong>Instructions:</strong></h6>
      <div id="instructions">
        <%= f.fields_for :instructions, @recipe.instructions.build do | instruction | %>
          <% render "instruction_fields", f: instruction %>
        <% end %>
      </div>
      <div class="links" tabindex="0" style="text-align: right;">
        <%= link_to_add_association "Add instruction", f, :instructions, class: "btn btn-secondary" %>
      </div><br />

    <p><strong>Tags:</strong></p>
      <%= f.text_field :all_tags, class: "form-control", placeholder: "Add comma-separated list of tags (like bread, the main dish, etc,)" %><br /><br />

      <div class="links" tabindex="0"><%= f.submit "Post recipe", class: "btn btn-secondary" %>
      </div>

    <% end %>
  </div>
</div>