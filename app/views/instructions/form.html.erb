<%= form_with(model: [ @recipe, @recipe.instructions.build ], local: true) do |form| %>
  <p>
    <%= form.label :step %><br>
    <%= form.text_area :step %>
  </p>

  <p>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>