<div class="card">
  <div class="card-body">
    <%= form_with scope: :story, url: stories_path, local: true do | f | %>

    <%= render "shared/errors", object: @story %>

      <%= f.label :title %><br>
      <%= f.text_field :title %>

   
    <p>
      <%= f.label :content %><br>
      <%= f.text_area :content %>
    </p>
   
    <p>
      <%= f.submit %>
    </p>
<% end %>