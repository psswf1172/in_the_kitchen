<section class="row">
  <div class="container">
    <ul id="photos-list">
      <% @photos.each do |photo| %>
        <li class="card border-info">
          <div class="card-body">
            <h4 class="card-title"><%= link_to photo.title, photo_path(photo) %></h4>
            <h6 class="card-subtitle mb-2 text-muted"><%= photo.author %></h6>
              <% photo.images.each do | image | %>
                <%= image_tag image.variant(resize: "300 x 300"), alt: "Photo posted by #{photo.author}", class: "card-img" %>
              <% end %>
                <p class="card-text fr-view"><%= truncate(sanitize(photo.description, tags: %w(p)), length: 150, separator: " ", escape: false) %></p>
              </p>
              <p><% photo.tags[0..2].each do |tag| %>
                <span class="badge badge-pill badge-info">
                  <%= tag.name %>
                </span>
                <% end %>
              </p>
          </div>
        </li>
      <% end %>
      <br />
    </ul>
  </div>
</section>
