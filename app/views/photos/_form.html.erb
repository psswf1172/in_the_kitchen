<div class="card">
  <div class="card-body">
    <%= form_for @photo do | f | %>

      <%= render "shared/errors", object: @photo %>

      <%= f.text_field :title, class: "form-control", placeholder: "Photo Title"  %>

      <%= f.text_field :description, class: "form-control", placeholder: "Caption"  %>

      <%= f.text_field :author, class: "form-control", placeholder: "Photo credit"  %>

      <%= f.file_field :images, multiple: true, direct_upload: true %>

    <%= f.submit class: "btn btn-secondary" %>
<% end %>
  </div>
</div>