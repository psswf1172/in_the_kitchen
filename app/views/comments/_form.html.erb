<div class="card">
  <div class="card-body">
    <div class="form-group">
      <%= form_for [object, object.comments.build]  do | f | %>

        <%= f.text_area :body, class: "form-control", placeholder: "Your comment here...", id: "wysiwyg" %><br /> 
        
        <div tabindex="0">
          <%= f.submit :class => "btn btn-secondary", placeholder: "Create comment" %>
        </div>
        
      <% end %>
    </div>
  </div>
</div>