<div class="card">
  <div class="card-body">
    <%= form_with(model: [ @recipe, @recipe.comments.build ], local: true) do |form| %>
      <div class="form-group">
        <%= form.text_area :body, class: "form-control", placeholder: "Description" %><br />
        <%= form.submit :class => "btn btn-secondary" %>
      </div>
    <% end %>
  </div>
</div>