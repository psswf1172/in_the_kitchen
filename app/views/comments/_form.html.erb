<div class="card">
  <div class="card-body">
    <%= form_with(model: [ @recipe, @recipe.comments.build ], local: true) do |form| %>
      <div class="form-group">
        <textarea class="form-control" id="body" rows="3"></textarea>
        <%= form.submit :class => "btn btn-secondary" %>
      </div>
    <% end %>
  </div>
</div>