<div class="row">
  <div class="container col-2"></div>
  <div class="container col-6">  
    <h2>Log in</h2>
  </div>
  <div class="container col-4"></div>
</div>

<br />
<%= render "devise/shared/links" %>
<br />

<div class="row">
  <div class="container col-2"></div>
  <div class="container col-6">
    <% form_for(resource, as: resource_name, url: new_user_session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :password %><br/>
        <%= f.password_field :password, autocomplete: "off" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "Log in" %>
      </div>
    <% end %>
  </div>
<div class="container col-4"></div>