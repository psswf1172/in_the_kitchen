<br />
<div class="row">
  <div class="container col-3"></div>
  <div class="container col-6">
    <% unless @posts.nil? %>
      <% if @posts.empty? %>
        <h2>No posts found matching your query.</h2>
      <% else %>
        <div class="card border-secondary"> 
        <div class="card-body">
          <h4 class="card-title">Search results</h4>

            <table style="width: 100%;">
              <thead>
                 <tr>
                   <th>Title</th>
                   <th>Author</th>
                 </tr>
              </thead>

              <tbody>
                <% @posts.each do |post| %>
                  <tr>
                    <td><%= post.title%></td>
                    
                    <td><%= post.author %></td>
                    
                  </tr>
                <% end %>
              <tbody>
            </table>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="container col-3"></div>
</div>